# https://editorconfig.org/#supported-properties

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[justfile]
indent_style = tab
indent_size = tab

[*.{bash,sh}]
indent_style = tab
indent_size = tab

[*.html]
indent_size = 2

[*.nix]
indent_size = 2

[*.plist]
indent_style = tab
indent_size = tab

[*.yml]
indent_size = 2
